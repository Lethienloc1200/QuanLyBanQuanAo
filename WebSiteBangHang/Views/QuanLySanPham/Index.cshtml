@using WebSiteBangHang.Models;
@model IEnumerable<SanPham>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Layout/AdminLayout.cshtml";
    //khởi tạo control WebGrid
    WebGrid grid = new WebGrid(source: Model, rowsPerPage: 5);

}
@Html.ActionLink("Thêm sản phẩm", "TaoMoi", null, new { @class="btn btn-success"})
<br />
<br />
@*thể hiện dữ liệu thông qua controller webgrid*@
@grid.GetHtml(

   tableStyle: "divTable",
   headerStyle: "gridHead",
   footerStyle: "gridFooter",
   rowStyle: "gridRow",
   alternatingRowStyle: "gridAltRow",
   columns: grid.Columns(
   grid.Column("MaSP", "MãSP"),
   grid.Column("TenSP", "TênSP"),
   //grid.Column("MoTa", "MôTả", format: p => @Html.Raw(p.MoTa)),
   grid.Column("HinhAnh", "HìnhẢnh", format: p => @Html.Raw("<img src=\"../Content/HinhAnhSP/" + p.HinhAnh + "\">")),
   grid.Column(format: p => @Html.ActionLink("Chỉnh sửa", "ChinhSua", new { id = p.MaSP })),
   grid.Column(format: p => @Html.ActionLink("Xóa", "Xoa", new { id = p.MaSP }))
   ))
<style>
    table.divTable {
        width: 100%;
    }
    img{
        width: 200px;
        height: 200px;
    }
    .divTable{
        border: 2px solid Black;
    }
    tr.gridHead > th > a {
        padding-right: 50px;
        font-size:20px;
        color:wheat;
    }
    .gridHead {
        background: Green;
    }
    .gridHead >td {
        padding:20px;
    }
    .gridHead > td > a {
            color: white;
        }
    .gridFooter {
        font-weight: bold;
    }
    .gridRow {
        color: white;
        background: Pink;
    }
    .FooterAdmin{
        display:none;
    }
</style>
