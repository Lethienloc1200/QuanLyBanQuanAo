@using CaptchaMvc.HtmlHelpers
@using CaptchaMvc

@using WebSiteBangHang.Models
@model ThanhVien

@{
    ViewBag.Title = "DangKy";
    Layout = "~/Views/Layout/ProductLayout.cshtml";
}

< div class=" container">
<div class=" register">
    <h1>Register</h1>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
    <hr />
    @Html.ValidationSummary(true)
    <div class="col-md-4 register-top-grid">
        <h3>Thông tin cá nhân</h3>
        <div>
            <span>Tài khoản</span>
            @Html.TextBoxFor(model=>model.TaiKhoan)
            @Html.ValidationMessageFor(model=>model.TaiKhoan)
        </div>
        <div>
            <span>Họ  tên</span>
            @Html.TextBoxFor(model => model.HoTen)
            @Html.ValidationMessageFor(model => model.HoTen)
        </div>
        <div>
            <span>Địa chỉ</span>
            @Html.TextBoxFor(model => model.DiaChi)
            @Html.ValidationMessageFor(model => model.DiaChi)
        </div>
        <div>
            <span>Email</span>
            @Html.TextBoxFor(model => model.Email)
            @Html.ValidationMessageFor(model => model.Email)
        </div>
        <div>
            <span>SDT</span>
            @Html.TextBoxFor(model => model.SoDienThoai)
            @Html.ValidationMessageFor(model => model.SoDienThoai)
        </div>
    </div>
    <div class="col-md-4 register-bottom-grid">
        <h3>Thông tin đăng nhập</h3>
        <div>
            <span>Password</span>
            @Html.PasswordFor(model => model.MatKhau)
            @Html.ValidationMessageFor(model => model.MatKhau)
        </div>
        <div>
            <span>Confirm Password</span>
            @Html.PasswordFor(model => model.MatKhau)
            @Html.ValidationMessageFor(model => model.MatKhau)
        </div>
        <div>
            <span>Câu hỏi bí mật</span>
            @Html.DropDownList("CauHoi")
        </div>
        <div>
            <span>Câu trả lời</span>
            @Html.TextBox("CauTraLoi")
        </div>
        <div>
            @Html.Captcha(3)
        </div>

        <input type="submit" value="Xác nhận">

    </div>
    <div class="clearfix"> </div>
}
</div>
</div>
<h1 style="color: red;">@ViewBag.ThongBao</h1>

